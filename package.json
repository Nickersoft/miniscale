{
	"name": "@kojodesign/miniscale",
	"version": "1.4.0",
	"description": "A tiny package for working with modular scale",
	"types": "lib/miniscale.d.ts",
	"main": "lib/miniscale.js",
	"files": ["/lib"],
	"type": "module",
	"scripts": {
		"build": "tsup -d lib --sourcemap --dts --format esm src",
		"test": "jest",
		"lint": "biome lint src/*.ts",
		"format": "biome format src/*.ts",
		"ci": "biome ci src/*.ts",
		"check": "tsc",
		"prepare": "pnpm run build"
	},
	"keywords": [
		"modular",
		"scale",
		"type",
		"typescale",
		"modularscale",
		"ratio",
		"typography"
	],
	"author": "Tyler Nickerson <nickersoft@gmail.com>",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Nickersoft/miniscale.git"
	},
	"bugs": {
		"url": "https://github.com/Nickersoft/miniscale/issues"
	},
	"homepage": "https://github.com/Nickersoft/miniscale",
	"devDependencies": {
		"@jest/globals": "^29.7.0",
		"@types/jest": "^29.5.12",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.2",
		"tsup": "^8.0.2",
		"typescript": "^5.4.4"
	},
	"dependencies": {
		"@biomejs/biome": "^1.6.4"
	}
}
